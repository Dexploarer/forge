{
  "name": "forge-backend",
  "version": "1.0.0",
  "description": "Production-ready backend for Forge - Bun + Fastify + Drizzle",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun src/database/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun src/database/seed.ts",
    "test": "bun test tests/",
    "test:watch": "bun test --watch",
    "test:health": "bun test tests/health.test.ts",
    "test:auth": "bun test tests/auth.test.ts",
    "test:assets": "bun test tests/assets.test.ts",
    "test:users": "bun test tests/users.test.ts",
    "test:teams": "bun test tests/teams.test.ts",
    "test:projects": "bun test tests/projects.test.ts",
    "test:admin": "bun test tests/admin.test.ts",
    "test:search": "bun test tests/search.test.ts",
    "test:analytics": "bun test tests/analytics.test.ts",
    "test:system": "bun test tests/system.test.ts",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.40",
    "@ai-sdk/google": "^2.0.26",
    "@ai-sdk/openai": "^2.0.59",
    "@elevenlabs/elevenlabs-js": "^2.21.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/multipart": "^9.3.0",
    "@fastify/static": "^8.3.0",
    "@fastify/swagger": "^9.3.0",
    "@fastify/swagger-ui": "^5.0.1",
    "@privy-io/server-auth": "^1.32.5",
    "@qdrant/js-client-rest": "^1.15.1",
    "ai": "^5.0.86",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "fastify": "^5.2.0",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^6.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "openai": "^6.7.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.0.0",
    "postgres": "^3.4.5",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bun": "^1.1.38",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/node": "^24.9.2",
    "drizzle-kit": "^0.31.6",
    "typescript": "^5.7.2"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
